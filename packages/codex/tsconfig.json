{
	"compilerOptions": {
		"target": "es2016",
		"useDefineForClassFields": true,
		"module": "preserve",
		"moduleResolution": "bundler",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
		"checkJs": true,
		"lib": [ "esnext", "dom" ],
		"types": [ "jest" ],
		"skipLibCheck": true,
		"declaration": true,
		"declarationDir": "dist/types"
	},
	"include": [ "src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue" ],
	"exclude": [
		"src/**/*.test.ts",
		"src/**/*.snap.ts",
		"src/testutils",
		"src/demo",
		"src/start.ts",
		"src/lib-wip.ts",
		"src/components-wip",
		"src/messages.ts"
	]
}
