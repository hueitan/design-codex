{
	"overrides": [
		{
			"files": [ "**/*.ts", "**/*.js", "**/*.mjs" ],
			"extends": [
				"wikimedia/common",
				"wikimedia/node"
			],
			"rules": {
				"strict": "off",
				"jsdoc/valid-types": "off",
				"jsdoc/no-undefined-types": "off",
				"jsdoc/check-tag-names": [
					"error",
					{
						"definedTags": [ "import" ]
					}
				],
				"@stylistic/member-delimiter-style": "off",
				"@typescript-eslint/explicit-member-accessibility": "off"
			}
		}
	]
}
